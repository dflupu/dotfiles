if has('unix')
    set directory=$HOME/.vim/swapfiles//

    set backup
    set backupdir=$HOME/.vim/backups//

    set undofile
    set undodir=$HOME/.vim/undo//

    let g:python2_host_prog = '/usr/bin/python'
    let g:python3_host_prog = '/usr/local/bin/python3'
else
    set nobackup
    set nowritebackup
endif
